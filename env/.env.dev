# ──────────────────────────────────────────────────────────────
#  Spring Datasource Configuration (PostgreSQL)
# ──────────────────────────────────────────────────────────────
SPRING_DATASOURCE_URL=jdbc:postgresql://app-postgres:5432/disaster  # JDBC URL to connect to PostgreSQL
SPRING_DATASOURCE_USERNAME=app                                      # DB username
SPRING_DATASOURCE_PASSWORD=app                                      # DB password

# ──────────────────────────────────────────────────────────────
#  Keycloak / OpenID Connect (OIDC)
# ──────────────────────────────────────────────────────────────
OIDC_ISSUER_URI=http://host.docker.internal:8080/realms/camel-realm  # OIDC issuer URI (Keycloak realm)
KEYCLOAK_CLIENT_ID=camel-api                                          # Client ID configured in Keycloak

# ──────────────────────────────────────────────────────────────
#  Application Configuration
# ──────────────────────────────────────────────────────────────
INBOX_DIR=/opt/app/inbox    # Directory path for file input/inbox (used by Camel routes, etc.)
TIME_ZONE=Asia/Tokyo        # Default timezone for the application

# ──────────────────────────────────────────────────────────────
#  Server (Spring Boot)
# ──────────────────────────────────────────────────────────────
SERVER_PORT=8088            # Port the app will listen on
SERVER_ADDRESS=0.0.0.0      # Bind address (0.0.0.0 allows access from outside containers/host)

# ──────────────────────────────────────────────────────────────
#  Security / Roles
# ──────────────────────────────────────────────────────────────
ROLE_ADMIN=ADMIN            # Admin role name expected from JWT token

# ──────────────────────────────────────────────────────────────
#  Keycloak Server Configuration (if you run Keycloak locally)
# ──────────────────────────────────────────────────────────────
KEYCLOAK_HTTP_PORT=8080     # HTTP port for Keycloak server (default 8080)
KC_DB_NAME=keycloak         # Keycloak DB name
KC_DB_USER=keycloak         # Keycloak DB user
KC_DB_PASS=keycloak         # Keycloak DB password

# ──────────────────────────────────────────────────────────────
#  Disaster Gateway App DB Configuration (used by Keycloak or other services)
# ──────────────────────────────────────────────────────────────
APP_DB_PORT=5432            # Port for the PostgreSQL instance used by app
APP_DB_NAME=disaster        # Database name
